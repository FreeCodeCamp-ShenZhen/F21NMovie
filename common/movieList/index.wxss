/* pages/common/movieList/index.wxss */
.u-mList{
  width: 100%; 
  font-size: 0;

}
.u-mItem{
  width: 30%;
  margin-left: calc(10% / 4);
  display: inline-block;
  vertical-align: top;
}
 .u-mImg{
   width: 220rpx;
   height: 310rpx;
   margin: auto;
 } 
.u-mContent{
  width: 100%;
  top: 300rpx;
  background: #fff;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  text-indent: 5rpx;
  
}
 .u-mTittle{
   margin-top: 10rpx; 
   vertical-align: middle;
   overflow: hidden;
   white-space: nowrap;
   text-overflow: ellipsis;
 }
 .u-mRating{
    font-size: 24rpx;
    line-height: 30rpx;
    
    color: #ee4e45;
 }
 .u-mloading{
   width: 100%;
   color: #333;
   font-size: 28rpx;
   text-align: center;
   height: 60rpx;
   line-height: 60rpx;
   background: #222;
 }

.u-mloadText{
  display: inline-block;
  color: #e9e9e9;
}
.u-mloadImg{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx; 
}
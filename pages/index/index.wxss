/**index.wxss**/

.zan-tab{
  position: fixed;
  top: 0;
  left: 0;
}
.zan-tab__item--selected .zan-tab__title {
  color: #4db37b;
  border-bottom: 2px solid #4db37b;
}

.zan-loadmore{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.u-mList{
  position: fixed;
  top: 50px;
  left: 0;
  height: calc(100% - 50px - 100rpx);
}

.zan-loadmore{
  z-index: 9999;
}

